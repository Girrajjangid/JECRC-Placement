        android:background="@drawable/profile_edittext_background"
        android:padding="10dp"
        android:layout_marginTop="18dp"

        android:maxLines="1"
        android:maxLength="4"
        android:hint="@string/_4th_semester_gpa"
        android:inputType="numberDecimal"
        android:id="@+id/profile_percentage_4sem"
        />
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textColorHint="@color/profile_hint_color"
        android:background="@drawable/profile_edittext_background"
        android:padding="10dp"
        android:layout_marginTop="18dp"

        android:maxLines="1"
        android:maxLength="4"
        android:hint="@string/_5th_semester_gpa"
        android:inputType="numberDecimal"
        android:id="@+id/profile_percentage_5sem"
        />
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textColorHint="@color/profile_hint_color"
        android:background="@drawable/profile_edittext_background"
        android:padding="10dp"
        android:layout_marginTop="18dp"

        android:maxLines="1"
        android:maxLength="4"
        android:hint="@string/_6th_semester_gpa"
        android:inputType="numberDecimal"
        android:id="@+id/profile_percentage_6sem"
        />
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textColorHint="@color/profile_hint_color"
        android:background="@drawable/profile_edittext_background"
        android:padding="10dp"
        android:layout_marginTop="18dp"

        android:maxLines="1"
        android:maxLength="4"
        android:hint="@string/_7th_semester_gpa"
        android:inputType="numberDecimal"
        android:id="@+id/profile_percentage_7sem"
        />
        <EditText
        android:layout_width="match_parent"
