<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/White"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:layout_width="match_parent"
            android:background="@drawable/profile_gradiant"
            android:layout_height="1dp"/>
            <TextView
            android:paddingLeft="10dp"
            android:clickable="false"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:background="@color/White"
            android:layout_centerHorizontal="true"
            android:textColor="@color/profile_start1"
            android:textSize="15sp"
            />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColor="@color/White"
            android:background="@drawable/profile_edittext_background"
            android:textColorHint="@color/profile_hint_color"
            android:padding="10dp"

            android:hint="@string/hint_name"
            android:clickable="false"
            android:textSize="18sp"
            android:id="@+id/profile_name"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColor="@color/White"
            android:background="@drawable/profile_edittext_background"
            android:textColorHint="@color/profile_hint_color"
            android:padding="10dp"

            android:hint="@string/father_s_name"
            android:maxLength="40"
            android:inputType="text|textPersonName"
            android:id="@+id/profile_father_name"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColor="@color/White"
            android:background="@drawable/profile_edittext_background"
            android:textColorHint="@color/profile_hint_color"
            android:padding="10dp"

            android:maxLength="40"
            android:inputType="text|textPersonName"
            android:id="@+id/profile_mother_name"
            android:hint="@string/mothers_s_name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColor="@color/White"
            android:background="@drawable/profile_edittext_background"
            android:textColorHint="@color/profile_hint_color"
            android:padding="10dp"

            android:hint="@string/hint_registration_number"
            android:clickable="false"
            android:textSize="18sp"
            android:id="@+id/profile_roll_no"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textColorHint="@color/profile_hint_color"
            android:background="@drawable/profile_edittext_background"
            android:padding="10dp"
            android:layout_marginTop="18dp"

            android:hint="@string/dob_dd_mm_yyyy"
            android:maxLength="10"
            android:inputType="date"
            android:id="@+id/profile_DOB"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textColor="@color/White"
            android:textColorHint="@color/profile_hint_color"
            android:background="@drawable/profile_edittext_background"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="18dp"

            android:maxLines="1"
            android:id="@+id/Profile_gender"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textColorHint="@color/profile_hint_color"
            android:background="@drawable/profile_edittext_background"
            android:padding="10dp"
            android:layout_marginTop="18dp"

            android:maxLines="5"
            android:hint="@string/home_hostel_address"
