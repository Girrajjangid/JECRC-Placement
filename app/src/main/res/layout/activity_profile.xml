        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textColorHint="@color/profile_hint_color"
        android:background="@drawable/profile_edittext_background"
        android:padding="10dp"
        android:layout_marginTop="18dp"

        android:maxLines="1"
        android:maxLength="4"
        android:hint="@string/overall_cgpa"
        android:inputType="numberDecimal"
        android:id="@+id/profile_percentage_overall"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textColorHint="@color/profile_hint_color"
            android:background="@drawable/profile_edittext_background"
            android:padding="10dp"
            android:layout_marginTop="18dp"

            android:maxLength="2"
            android:hint="@string/over_all_back_0_1_2_3"
