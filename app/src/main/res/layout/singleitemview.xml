<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_share"
    android:background="@color/White"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="placementproject.studentapp.SingleItemView"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginBottom="46dp">
        <TextView
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:autoLink="email|phone|web"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            android:textIsSelectable="true"
            android:paddingBottom="10dp"
            android:textAlignment="textStart"
            android:background="@drawable/title_background_shareactivity"
            android:id="@+id/title"
            android:layout_marginBottom="66dp"
            tools:ignore="RtlCompat,RtlHardcoded,RtlSymmetry" />
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/password_g4"
        android:text="@string/interestedButton"
        android:id="@+id/interested"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="interested"
        android:textColor="@color/White"
        android:textSize="17sp"
        tools:ignore="RtlHardcoded" />
</RelativeLayout>
